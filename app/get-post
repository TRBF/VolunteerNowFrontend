// functie pt login la users
async function getUsers() {
    const url = 'http://localhost:3000/api/login?username&password';
    const response = await fetch(url);
    const users = await response.json();
    return users;
}

// functie pt creare de user:
async function createUser(user) {
    const url = 'http://localhost:3000/api/register';
    const response = await fetch(url, {
        method: 'POST',
        headers: {
        'Content-Type': 'application/json',
        },
        body: JSON.stringify(user),
    });
    const newUser = await response.json();
    return newUser;
}

async function eventGet(number: any) {
    const url = 'http://localhost:3000/api/get_events?page';
    const response = await fetch(url);
    const event = await response.json();
    return event;
}

async function eventAdd(name, description, link_to_pfp, link_to_cover_image, edition, location, time) {
    const url = 'http://localhost:3000/api/add_event';
    const response = await fetch(url, {
        method: 'POST',
        headers: {
        'Content-Type': 'application/json',
        },
        body: JSON.stringify([name, description, link_to_pfp, link_to_cover_image, edition, location, time]),
    });
    const newEvent = await response.json();
    return newEvent;   
}